<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20px" />
            <stroke android:width="3dip" android:color="#605D5C" />
            <gradient android:angle="360" android:startColor="#D81B60" android:endColor="#5E35B1" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20px" />
            <stroke android:width="3dip" android:color="#605D5C" />
            <gradient android:angle="360" android:startColor="#D81B60" android:endColor="#5E35B1" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="20px" />
            <stroke android:width="3dip" android:color="@color/colorWhite" />
            <gradient android:angle="90" android:startColor="#D81B60" android:endColor="#5E35B1" />
        </shape>
    </item>
</selector>